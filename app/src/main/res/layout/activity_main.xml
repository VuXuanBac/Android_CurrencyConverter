<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textCurrencyFromSymbol"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="25sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/textValueFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/text_color"
                />
        </LinearLayout>
        <Spinner
            android:id="@+id/spinnerCurrencyFrom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:spinnerMode="dropdown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textCurrencyToSymbol"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="25sp"
                android:textColor="@color/text_color"
                />
            <TextView
                android:id="@+id/textValueTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/text_color"
                />
        </LinearLayout>
        <Spinner
            android:id="@+id/spinnerCurrencyTo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:spinnerMode="dropdown"
            />
        <TextView
            android:id="@+id/textRate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="1 USD = 23132.985 VND"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            />
    </LinearLayout>

<!--    Buttons   -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="5">
        <Button
            android:id="@+id/btnClearEntry"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/control_button_state"
            android:text="CE"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btnBackSpace"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/control_button_state"
            android:text="X"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/number_button_state"
            android:text="."
            android:textSize="25sp" />
    </GridLayout>

</LinearLayout>